#!/bin/bash
#  This is sourced. Fake bang-path to help editors and linters
#  shellcheck disable=SC2034  # dont warn about unused variables

# Installation methods;
#  pip3 install bashate
#  brew install bashate
#  (Ubuntu) sudo apt install python3-bashate

# inline-excludes:  # noqa: E001
# project config files: .bashateconfig
#  max-line-length=92
#  ignore=E001,E002


if command -v bashate-wrapper >/dev/null; then
    plugin_cmd="bashate-wrapper"
else
    plugin_cmd="bashate"
fi

plugin_priority=5 #  suggested order when multiple plugins can handle a file

#  file-types this plugin handles
plugin_file_types=(
    "Bourne-Again shell script*"
)

plugin_extensions=(
    .bash
)
