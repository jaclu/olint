#!/bin/bash
# This is sourced. Fake bang-path to help editors and linters
# shellcheck disable=SC2034  # dont warn about unused variables
#
# Flake8 also provides: pyflakes, pycodestyle, McCabe
# so it would be redundant to also run them if you use Flake8
#

# Installation methods;
#  pip install flake8
#  brew install flake8
#  (Ubuntu) sudo apt install python3-flake8
#  (Alpine) sudo apk add py3-flake8

# Depending on install method, the binary changes name:
#  pip
_bin=flake8
#  apt
#_bin=pyflakes3

plugin_cmd="$_bin --color=always"
unset _bin

plugin_priority=60

# file extensions this plugin handles
plugin_extensions=(
    .py
    .py3
)

# file-types this plugin handles
plugin_file_types=(
    "Python script*"
)
