#!/bin/bash
# shellcheck disable=SC2034


plugin_name="flake8"
plugin_cmd="flake8 --color=always"
plugin_priority=2 # suggested order when multiple plugins can handle a file

# file extensions this plugin handles
plugin_extensions=(
    .py
    .py3
)

# file-types this plugin handles
plugin_file_types=(
    "Python script*"
)
